<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StyleMainLayout">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="StyleLinearLayout">
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginLeft">33dp</item>
        <item name="android:layout_marginRight">33dp</item>
    </style>

    <style name="StyleAppDescription">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">33dp</item>
        <item name="android:paddingRight">33dp</item>
    </style>

</resources>
